{
  "name": "telegram-shop-bot",
  "version": "1.0.0",
  "description": "Простой Telegram бот для продажи цифровых товаров через Web App",
  "main": "bot/index.js",
  "scripts": {
    "start": "node bot/index.js",
    "dev": "nodemon bot/index.js",
    "server": "node server/index.js",
    "minify:js": "terser webapp/app.js -o webapp/app.min.js -c -m",
    "minify:css": "cleancss -o webapp/style.min.css webapp/style.css",
    "minify": "npm run minify:js && npm run minify:css",
    "build": "npm run minify"
  },
  "keywords": [
    "telegram",
    "bot",
    "shop",
    "webapp",
    "payments"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "node-telegram-bot-api": "^0.66.0",
    "nodemailer": "^7.0.13",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "nodemon": "^3.0.2",
    "terser": "^5.46.0"
  }
}
